#!/usr/bin/env bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -x polybar >/dev/null; do sleep 1; done

# Function to start polybar with parameters in common on all monitors.
start_polybar() {
	polybar --quiet $1 &
}

POLYBAR_MONITOR=HDMI-0 start_polybar main
POLYBAR_MONITOR=DVI-0 start_polybar right

